{
  "name": "@spotify/lighthouse-audit-service",
  "description": "Run, store, and view Lighthouse audits on all of your websites",
  "author": "Paul Marbach",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spotify/lighthouse-audit-service.git"
  },
  "license": "Apache-2.0",
  "version": "0.0.0-development",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types",
  "files": [
    "types",
    "cjs",
    "esm"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "node ./cjs/run.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "rimraf cjs esm types && tsc -p tsconfig.json && tsc -p tsconfig.json --module commonjs --outDir cjs && copyfiles --up 1 src/**/*.sql cjs && copyfiles --up 1 src/**/*.sql esm",
    "build:types": "tsc --emitDeclarationOnly --outDir types",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "commit": "cz",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@types/async-retry": "^1.4.9",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.24",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.9.3",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/wait-on": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "commitizen": "^4.3.1",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.0",
    "eslint": "^9.14.0",
    "eslint-plugin-jest": "^28.9.0",
    "get-port": "^7.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "node-duration": "^2.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.9",
    "supertest": "^7.1.3",
    "testcontainers": "^11.7.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-promise-router": "^4.1.1",
    "lighthouse": "^13.0.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.13.1",
    "puppeteer": "^24.23.0",
    "sql-template-strings": "^2.2.2",
    "uuid": "^10.0.0",
    "wait-on": "^9.0.1",
    "winston": "^3.15.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.19"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
